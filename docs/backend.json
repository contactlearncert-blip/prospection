{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the user."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        }
      },
      "required": ["id", "email", "name"]
    },
    "Prospect": {
      "title": "Prospect",
      "description": "Represents a potential customer or lead.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the prospect."
        },
        "name": {
          "type": "string",
          "description": "The prospect's full name."
        },
        "company": {
          "type": "string",
          "description": "The company the prospect works for."
        },
        "industry": {
          "type": "string",
          "description": "The industry the prospect's company belongs to."
        },
        "location": {
          "type": "string",
          "description": "The geographical location of the prospect."
        },
        "contact": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": "string"
            },
            "website": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": ["email", "website"]
        },
        "status": {
          "type": "string",
          "enum": ["new", "contacted", "replied", "interested", "not_interested"]
        },
        "lastContacted": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of the last contact."
        },
        "onlinePresence": {
          "type": "string",
          "description": "Notes on the prospect's online presence."
        },
        "avatar": {
          "type": "string",
          "format": "uri",
          "description": "URL to the prospect's avatar image."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this prospect."
        }
      },
      "required": ["id", "name", "company", "industry", "status", "userId"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/users/{userId}/prospects/{prospectId}": {
      "schema": {
        "$ref": "#/entities/Prospect"
      },
      "description": "Stores the prospects for each user."
    }
  }
}
